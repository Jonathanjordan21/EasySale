<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/background_cloud"
    android:paddingEnd="21dp"
    android:paddingBottom="12dp"
    android:paddingStart="21dp"
    android:paddingTop="6dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="end|top">
        <TextView
            android:id="@+id/cancelIconSales"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/neon_blue"
            android:textStyle="bold"
            android:textSize="16sp"
            android:gravity="center"
            android:background="@drawable/text_icon_close"
            android:text="X"
            tools:ignore="HardcodedText" />
    </LinearLayout>


    <EditText
        android:id="@+id/etxtCustName"
        android:textColor="@color/white"
        android:textColorHint="@color/cream"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="21sp"
        android:gravity="center"
        android:hint="@string/enter_customer_name"
        android:importantForAutofill="no" />

    <EditText
        android:id="@+id/etQuantity"
        android:textColor="@color/white"
        android:textColorHint="@color/cream"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textStyle="bold"
        android:inputType="number"
        android:textSize="21sp"
        android:gravity="center"
        android:hint="@string/quantity"
        android:importantForAutofill="no" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnConfirmSales"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="21sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@drawable/background_cloud"
        android:text="@string/confirm"/>


</LinearLayout>