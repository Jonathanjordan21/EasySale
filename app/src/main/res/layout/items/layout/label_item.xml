<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvLabel"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="horizontal"
    app:cardCornerRadius="21dp"
    android:background="@android:color/transparent"
    android:layout_marginBottom="12dp"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/wave"
        android:backgroundTint="@color/orange">
        <androidx.cardview.widget.CardView
            android:id="@+id/cvLabelIcon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:clickable="true"
            app:cardCornerRadius="100000dp"
            android:layout_margin="12dp"
            android:layout_gravity="center"
            android:focusable="true">

            <ImageView
                android:id="@+id/ivLabelIcon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_baseline_label_24"
                app:tint = "@color/black"
                android:padding="12dp"
                />


        </androidx.cardview.widget.CardView>



        <TextView
            android:id="@+id/tvLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/brown"
            android:textSize="21sp"
            android:textStyle="bold"
            android:text="Label's Name"
            android:layout_gravity="center"
            android:gravity="center|start"/>
        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
        <TextView
            android:id="@+id/tvDeleteLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:layout_gravity="end|center"
            android:layout_margin="21dp"
            android:text="X"
            android:textStyle="bold"
            android:background="@drawable/rect_close_icon"
            android:backgroundTint="@color/red"
            android:textColor="@color/white"
            android:textSize="21sp"
            tools:ignore="HardcodedText" />

    </LinearLayout>
</androidx.cardview.widget.CardView>