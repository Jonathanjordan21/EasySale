<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/orange_mountain"
    tools:context=".fragments.Label">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/background_sunset">

        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="21dp"
            android:layout_marginTop="21dp"
            android:layout_weight="72"
            android:baselineAligned="false"
            android:gravity="start|center"
            android:text="@string/labels_and_categories"
            android:textColor="@color/black"
            android:textSize="26sp"
            android:textStyle="bold" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabNewLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:layout_marginTop="11dp"
            android:gravity="end|center"
            android:clickable="true"
            android:focusable="true"
            android:backgroundTint="@android:color/transparent"
            android:src="@android:drawable/ic_input_add"
            tools:ignore="ContentDescription" />

    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcvLabel"
        android:layout_margin="21dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>



</LinearLayout>